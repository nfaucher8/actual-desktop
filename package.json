{
  "name": "actual-desktop",
  "version": "22.10.25",
  "license": "MIT",
  "description": "actual desktop app with syncing server",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "lint": "eslint .",
    "build": "electron-builder build",
    "types": "tsc --noEmit --incremental",
    "verify": "yarn -s lint && yarn types"
  },
  "build": {
    "afterAllArtifactBuild": "afterAllArtifactBuild.js",
    "beforePack": "./beforePack.js",
    "productName": "Actual",
    "appId": "com.actualbudget.desktop",
    "files": [
      "actual-server/",
      "app.js",
      "main.js",
      "package.json",
      "load-config.js",
      {
        "from": "./node_modules/@actual-app/web/build/android-chrome-512x512.png",
        "to": "icon.png"
      }
    ],
    "win": {
      "target": [
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    }
  },
  "dependencies": {
    "@actual-app/api": "4.1.0",
    "@actual-app/web": "22.10.25",
    "bcrypt": "^5.0.1",
    "better-sqlite3": "^7.5.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "electron-store": "^8.1.0",
    "express": "4.17",
    "express-actuator": "^1.8.1",
    "express-response-size": "^0.0.3",
    "node-fetch": "^2.2.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "electron": "19.1.3",
    "electron-builder": "^23.6.0",
    "eslint": "^8.15.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.6.2"
  }
}
